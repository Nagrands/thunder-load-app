<!-- Sidebar -->
<aside class="sidebar" id="sidebar" role="navigation" aria-label="Боковое меню">
  <!-- Панель действий сайдбара: закрепить/закрыть -->
  <div class="sidebar-actions">
    <button
      class="pin-btn"
      id="collapse-sidebar"
      aria-label="Закрепить меню"
      data-bs-toggle="tooltip"
      data-bs-placement="right"
      title="Закрепить/открепить меню"
    >
      <i class="fa-solid fa-thumbtack"></i>
    </button>
    <button
      class="pin-btn"
      id="compact-sidebar"
      aria-label="Свернуть в компактный вид"
      data-bs-toggle="tooltip"
      data-bs-placement="right"
      title="Свернуть/развернуть меню (компактный режим)"
    >
      <i class="fa-solid fa-compress"></i>
    </button>
    <button class="close-btn" id="close-btn" aria-label="Закрыть меню">
      <i class="fa-solid fa-angles-left"></i>
    </button>
  </div>

  <div class="logo-container">
    <img src="../assets/icons/thunder-logo.png" alt="Логотип Thunder Load" class="logo" />
    <span class="logo-text">Thunder Load</span>
  </div>

  <div class="sidebar-group" id="sidebar-nav">
    <div
      class="sidebar-title"
      role="button"
      tabindex="0"
      data-group="nav"
      aria-controls="group-nav"
      aria-expanded="true"
    >
      Навигация
    </div>
    <div class="sidebar-collapse" id="group-nav">
      <button
        class="sidebar-item"
        data-tab="download"
        data-id="download"
        title="Downloader"
        data-bs-toggle="tooltip"
        data-bs-placement="right"
        data-hotkey="Ctrl+1"
      >
        <i class="fa-solid fa-download"></i>
        <span>Downloader</span>
      </button>
      <button
        class="sidebar-item"
        data-tab="wireguard"
        data-id="wireguard"
        title="WG Unlock"
        data-bs-toggle="tooltip"
        data-bs-placement="right"
        data-hotkey="Ctrl+2"
      >
        <i class="fa-solid fa-unlock-keyhole"></i>
        <span>WG Unlock</span>
      </button>
      <button
        class="sidebar-item"
        data-tab="backup"
        data-id="backup"
        title="Backup"
        data-bs-toggle="tooltip"
        data-bs-placement="right"
        data-hotkey="Ctrl+3"
      >
        <i class="fa-solid fa-box-archive"></i>
        <span>Backup</span>
      </button>
      <button
        class="sidebar-item"
        id="sb-open-history"
        data-id="history"
        title="История загрузок"
        data-bs-toggle="tooltip"
        data-bs-placement="right"
        data-hotkey="Ctrl+H"
      >
        <i class="fa-solid fa-clock-rotate-left"></i>
        <span>История</span>
        <span class="badge" id="sb-history-count">0</span>
      </button>
    </div>
  </div>

  <!-- Иконки видео-сервисов -->
  <div class="sidebar-group" id="sidebar-services">
    <div
      class="sidebar-title"
      role="button"
      tabindex="0"
      data-group="services"
      aria-controls="group-services"
      aria-expanded="true"
    >
      Сервисы
    </div>
    <div class="sidebar-collapse" id="group-services">
      <nav class="social-links">
        <div class="icon-links">
          <a
            href="https://www.youtube.com"
            data-link="https://www.youtube.com"
            data-bs-toggle="tooltip"
            data-bs-placement="top"
            title="YouTube"
            data-hotkey="Ctrl+Shift+1"
            aria-label="YouTube"
          >
            <i class="fab fa-youtube"></i>
          </a>
          <a
            href="https://www.twitch.tv"
            data-link="https://www.twitch.tv"
            data-bs-toggle="tooltip"
            data-bs-placement="top"
            title="Twitch"
            data-hotkey="Ctrl+Shift+2"
            aria-label="Twitch"
          >
            <i class="fab fa-twitch"></i>
          </a>
          <a
            href="https://vkvideo.ru"
            data-link="https://vkvideo.ru"
            data-bs-toggle="tooltip"
            data-bs-placement="top"
            title="VK Video"
            data-hotkey="Ctrl+Shift+3"
            aria-label="VK"
          >
            <i class="fab fa-vk"></i>
          </a>
          <a
            href="https://www.coub.com"
            data-link="https://www.coub.com"
            data-bs-toggle="tooltip"
            data-bs-placement="top"
            title="Coub"
            data-hotkey="Ctrl+Shift+4"
            aria-label="Coub"
          >
            <i class="fas fa-video"></i>
          </a>
        </div>
      </nav>
    </div>
  </div>

  <div class="sidebar-footer" id="sidebar-others">
    <div
      class="sidebar-title"
      role="button"
      tabindex="0"
      data-group="others"
      aria-controls="group-others"
      aria-expanded="true"
    >
      Прочее
    </div>
    <div class="sidebar-collapse" id="group-others">
      <button
        id="open-github"
        class="sidebar-item"
        data-bs-toggle="tooltip"
        data-bs-placement="top"
        title="Репозиторий приложения"
      >
        <i class="fa-brands fa-github"></i>
        <span>GitHub</span>
      </button>
    </div>
  </div>
</aside>
